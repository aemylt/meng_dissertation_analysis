#!/usr/bin/python
import random
import sys

num_patterns = int(sys.argv[1])
max_length = int(sys.argv[2])

with open('dna.50MB', 'r') as text:
    line = text.readline()
    with open(sys.argv[3], 'w') as patterns:
        patterns.write("%d\n" % num_patterns)
        for i in range(num_patterns):
            length = random.randint(0, max_length + 1)
            start = random.randint(0, len(line) - length)
            patterns.write("%d\n" % length)
            patterns.write("%s\n" % line[start:start + length])
